@model AuthServer.Models.UserModel

@{
    ViewData["Title"] = "Login";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />

<section class="vh-100">
    <div class="container-fluid h-custom">
        <div class="row d-flex justify-content-center align-items-center h-100">

            <!-- Logos -->
            <div class="col-md-9 col-lg-6 col-xl-5 text-center mb-4">
                <div class="d-flex justify-content-center align-items-center">
                    <div class="mx-3">
                        <img src="~/images/peoplecore-logo.png" class="img-fluid" style="max-height:180px" />
                    </div>
                    <div class="mx-3">
                        <img src="~/images/SMPC_logo.svg.png" class="img-fluid" style="max-height:80px" />
                    </div>
                </div>
            </div>

            <!-- Login Form -->
            <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
                <form asp-action="Login" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />

                    <div asp-validation-summary="All" class="text-danger mb-3"></div>

                    <!-- Username -->
                    <div class="mb-3">
                        <label asp-for="Username" class="form-label">Username</label>
                        <input asp-for="Username" name="Username" class="form-control form-control-lg" placeholder="Enter username" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>

                    <!-- Password -->
                    <div class="mb-3">
                        <label asp-for="Password" class="form-label">Password</label>
                        <input asp-for="Password" name="Password" type="password" class="form-control form-control-lg" placeholder="Enter password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <!-- Error message -->
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger">
                            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                            {
                                <div>@error.ErrorMessage</div>
                            }
                        </div>
                    }

                    <div class="d-flex gap-2 mt-4">
                        <button type="submit" class="btn btn-primary btn-lg w-50">Login</button>
                        <button type="button" class="btn btn-secondary btn-lg w-50" onclick="window.location.href='/'">Cancel</button>
                    </div>
                </form>
            </div>

        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
